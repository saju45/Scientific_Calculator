<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".MainActivity">



    <TextView
        android:paddingEnd="10dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:id="@+id/previousCalculationView"
        app:layout_constraintBottom_toTopOf="@id/display"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:id="@+id/display"
        android:textAlignment="textEnd"
        android:importantForAutofill="no"
        android:textColorHint="@color/greyAccent"
        android:hint="@string/displayHint"
        android:textSize="48sp"
        android:textColor="@color/greyAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


    <ImageButton
        android:id="@+id/backSpace"
        app:layout_constraintEnd_toEndOf="@id/layout1"
        app:layout_constraintBottom_toTopOf="@id/layout1"
        android:layout_marginTop="10dp"
        android:textSize="28sp"
        android:textColor="@color/tanAccent"
        app:srcCompat="@drawable/backspace"
        android:background="@drawable/btn_bg"
        android:layout_weight="1"
        android:layout_width="80dp"
        android:layout_height="50dp"/>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">


            <Button
                android:id="@+id/clearBtn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/clearText"
                android:textColor="@color/tanAccent"
                android:textSize="28sp" />


            <Button
                android:id="@+id/openParBtn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/parenthesesOpenText"
                android:textColor="@color/tanAccent"
                android:textSize="28sp" />


            <Button
                android:id="@+id/closeParBtn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/parenthesesCloseText"
                android:textColor="@color/tanAccent"
                android:textSize="28sp" />

            <Button
                android:id="@+id/divideBtn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/arithmatic_btn_bg"
                android:text="@string/divideText"
                android:textColor="@color/tanAccent"
                android:textSize="28sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">


            <Button
                android:id="@+id/sevenBtn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/sevenText"
                android:textColor="@color/tanAccent"
                android:textSize="28sp" />


            <Button
                android:id="@+id/eightBtn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/eightText"
                android:textColor="@color/tanAccent"
                android:textSize="28sp" />


            <Button
                android:id="@+id/nineBtn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/nineText"
                android:textColor="@color/tanAccent"
                android:textSize="28sp" />

            <Button
                android:id="@+id/multiplyBtn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/arithmatic_btn_bg"
                android:text="@string/multiplyText"
                android:textColor="@color/tanAccent"
                android:textSize="28sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">


            <Button
                android:id="@+id/fourBtn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/fourText"
                android:textColor="@color/tanAccent"
                android:textSize="28sp" />


            <Button
                android:id="@+id/fiveBtn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/fiveText"
                android:textColor="@color/tanAccent"
                android:textSize="28sp" />


            <Button
                android:id="@+id/sixBtn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/sixText"
                android:textColor="@color/tanAccent"
                android:textSize="28sp" />

            <Button
                android:id="@+id/substractBtn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/arithmatic_btn_bg"
                android:text="@string/subtractText"
                android:textColor="@color/tanAccent"
                android:textSize="28sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">


            <Button
                android:id="@+id/oneBtn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/oneText"
                android:textColor="@color/tanAccent"
                android:textSize="28sp" />


            <Button
                android:id="@+id/twoBtn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/twoText"
                android:textColor="@color/tanAccent"
                android:textSize="28sp" />


            <Button
                android:id="@+id/threeBtn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/threeText"
                android:textColor="@color/tanAccent"
                android:textSize="28sp" />

            <Button
                android:id="@+id/addBtn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/arithmatic_btn_bg"
                android:text="@string/addText"
                android:textColor="@color/tanAccent"
                android:textSize="28sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">


            <Button
                android:id="@+id/zeroBtn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:background="@drawable/btn_bg"
                android:text="@string/zeroText"
                android:textColor="@color/tanAccent"
                android:textSize="28sp" />


            <Button
                android:id="@+id/decimalBtn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/decimalText"
                android:textColor="@color/tanAccent"
                android:textSize="28sp" />

            <Button
                android:id="@+id/equalBtn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/equal_btn_bg"
                android:text="@string/equalsText"
                android:textColor="@color/tanAccent"
                android:textSize="28sp" />


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>